<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <!-- Bagian Task Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Task Title"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/addTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:hint="Enter task title" />

        <!-- Bagian Task Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Task Description"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/addTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:hint="Enter task description" />

        <!-- Bagian Task Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Task Date"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/taskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:hint="dd/MM/yyyy" />

        <!-- Bagian Task Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Task Time"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:hint="HH:mm" />

        <!-- Bagian Upload File -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Event Image"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/taskImageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:hint="No file selected" />

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@drawable/edittext_background"
            android:layout_marginTop="10dp" />

        <!-- Bagian Task Status Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Task Status"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <!-- Button Add Task -->
        <Button
            android:id="@+id/addTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="40dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
